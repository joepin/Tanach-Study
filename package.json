{
  "name": "ts-react",
  "version": "1.0.0",
  "description": "A React-based client app for the Tanach Study Program",
  "main": "server.js",
  "oldscripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -f package-lock.json",
    "build": "NODE_ENV=production webpack --mode production --progress --config webpack.config.js",
    "deploy": "npm run clean && npm i --only=dev && NODE_ENV=production webpack --mode production --progress && rm -rf node_modules/ && rm -f package-lock.json && npm i --only=prod",
    "start": "node server.js",
    "rebuild": "NODE_ENV=production webpack --mode production --progress --colors",
    "watch": "webpack --mode development --progress --watch",
    "test": "jest"
  },
  "scripts": {
    "build": "gatsby build",
    "clean": "rm -rf dist && rm -rf node_modules && rm -f package-lock.json && rm -rf .cache && rm -rf public",
    "deploy:prod": "NODE_ENV=production gatsby-plugin-s3 deploy",
    "deploy:staging": "NODE_ENV=development gatsby-plugin-s3 deploy",
    "develop": "gatsby develop",
    "start": "npm run develop",
    "serve": "gatsby serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanach-study/Tanach-Study.git"
  },
  "author": "Joey Pinhas",
  "license": "MIT",
  "engines": {
    "node": "8.0.0",
    "npm": "5.0.0"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "gatsby": "^2.8.5",
    "gatsby-image": "^2.1.2",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-manifest": "^2.1.1",
    "gatsby-plugin-offline": "^2.1.1",
    "gatsby-plugin-react-helmet": "^3.0.12",
    "gatsby-plugin-s3": "^0.3.1",
    "gatsby-plugin-sharp": "^2.1.3",
    "gatsby-source-filesystem": "^2.0.38",
    "gatsby-source-mongodb": "^2.0.19",
    "gatsby-transformer-sharp": "^2.1.21",
    "materialize-css": "^1.0.0",
    "mongodb": "^3.2.7",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "save": "^2.4.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "classnames": "2.2.6",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.13.0",
    "jest": "^24.8.0",
    "webpack": "^4.35.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  }
}
