{
  "name": "ts-react",
  "version": "1.0.0",
  "description": "A React-based client app for the Tanach Study Program",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -f package-lock.json",
    "build": "NODE_ENV=production webpack --mode production --progress --config webpack.config.js",
    "deploy": "npm run clean && npm i --only=dev && NODE_ENV=production webpack --mode production --progress && rm -rf node_modules/ && rm -f package-lock.json && npm i --only=prod",
    "start": "node server.js",
    "rebuild": "NODE_ENV=production webpack --mode production --progress --colors",
    "watch": "webpack --mode development --progress --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanach-study/Tanach-Study.git"
  },
  "author": "Joey Pinhas",
  "license": "MIT",
  "engines": {
    "node": "8.0.0",
    "npm": "5.0.0"
  },
  "dependencies": {
    "connect-history-api-fallback": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "7.1.4",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-transform-strict-mode": "6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "classnames": "2.2.5",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "exports-loader": "0.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-template": "6.2.0",
    "imports-loader": "0.8.0",
    "jest": "^23.1.0",
    "postcss-loader": "2.1.5",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-ga": "2.5.0",
    "react-router-dom": "4.2.2",
    "react-test-renderer": "^16.4.1",
    "style-loader": "0.21.0",
    "url-loader": "0.5.9",
    "webpack": "4.7.0",
    "webpack-cli": "^2.1.3",
    "whatwg-fetch": "2.0.4"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  }
}
